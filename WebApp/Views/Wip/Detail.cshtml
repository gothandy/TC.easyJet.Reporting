@model IEnumerable<CardWithTime>
<ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li><a href="/WIP">WIP</a></li>
    <li class="active">@Model.First().ListName</li>
</ol>

<div class="page-header">
    <h2>@Model.First().ListName WIP</h2>
</div>


<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>DomId</th>
                <th>Epic</th>
                <th>Name</th>
                <th class="currency">Billable</th>
            </tr>
        </thead>
        <tbody>
            @foreach (CardWithTime item in Model)
            {
                <tr class="@(item.Blocked.GetValueOrDefault() ? "danger" : string.Empty)">
                    <td>@item.DomId</td>
                    <td>@item.Epic</td>
                    <td>@TrelloHelper.CardLink(item.CardId, item.Name)</td>
                    <td class="currency">@TogglHelper.DetailedReport(item.TaskId, CurrencyHelper.Format(item.Billable))</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3">Total</td>
                <td class="currency">@CurrencyHelper.Format(Model.Sum(e => e.Billable))</td>
            </tr>
        </tfoot>
    </table>
</div>
