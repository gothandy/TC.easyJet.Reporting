@model IEnumerable<CardWithTime>
<h2>Invoice</h2>
<h3>@DateTimeHelper.Format(Model.First().Invoice)</h3>
<h4>@Model.First().Epic</h4>

<table>
    <thead>
        <tr>
            <th>DomId</th>
            <th>Name</th>
            <th>Billable</th>
        </tr>
    </thead>
    <tbody>
        @foreach (CardWithTime item in Model)
        {
            <tr>
                <td> @item.DomId</td>
                <td>@TrelloHelper.CardLink(@item.CardId, @item.Name)</td>
                <td class="currency">@CurrencyHelper.Format(item.Billable)</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="2">Total</td>
            <td class="currency">@CurrencyHelper.Format(Model.Sum(e => e.Billable))</td>
        </tr>
    </tfoot>
</table>
