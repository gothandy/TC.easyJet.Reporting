@model IEnumerable<CardWithTime>

<ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li><a href="/Invoice">Invoices</a></li>
    <li><a href="/Invoice/@Model.First().Invoice.Value.ToString("yyyy")/@Model.First().Invoice.Value.ToString("MM")">@Model.First().Invoice.Value.ToString("MMMM yyyy")</a></li>
    <li class="active">@Model.First().Epic</li>
</ol>

<div class="page-header">
    <h2>Invoice @Model.First().Invoice.Value.ToString("MMMM yyyy") @Model.First().Epic</h2>
</div>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>DomId</th>
                <th>Epic</th>
                <th>Name</th>
                <th>Billable</th>
            </tr>
        </thead>
        <tbody>
            @foreach (CardWithTime item in Model)
            {
                <tr>
                    <td>@item.DomId</td>
                    <td>@item.Epic</td>
                    <td>@TrelloHelper.CardLink(@item.CardId, @item.Name)</td>
                    <td class="currency">@CurrencyHelper.Format(item.Billable)</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3">Total</td>
                <td class="currency">@CurrencyHelper.Format(Model.Sum(e => e.Billable))</td>
            </tr>
        </tfoot>
    </table>
</div>