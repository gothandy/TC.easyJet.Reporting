@model IEnumerable<TopXModel>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>DomId</th>
                <th>Epic</th>
                <th>Name</th>
                <th class="number">@Html.ActionLink("Months", "ByMonths")</th>
                <th class="currency">@Html.ActionLink("Billable", "ByBillable")</th>
            </tr>
        </thead>
        <tbody>
            @foreach (TopXModel item in Model)
            {
                <tr>
                    <td>@item.DomId</td>
                    <td>@item.Epic</td>
                    <td>@TrelloHelper.CardLink(@item.CardId, @item.Name)</td>
                    <td class="number">@item.Months</td>
                    <td class="currency">@CurrencyHelper.Format(item.Billable)</td>
                </tr>
            }
        </tbody>
    </table>
</div>